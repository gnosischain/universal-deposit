{
  "name": "@universal-deposit/backend",
  "version": "0.0.1",
  "private": true,
  "description": "Universal Deposit backend (API, workers, queues)",
  "license": "MIT",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "directories": {
    "src": "src"
  },
  "files": [
    "dist/*",
    "package.json",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "build": "pnpm prisma:generate && tsc -p ./tsconfig.json",
    "check-types": "tsc --noEmit -p ./tsconfig.json",
    "clean": "rm -rf dist/",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:reset": "docker-compose -f docker-compose.dev.yml exec postgres psql -U postgres -d universal_deposit -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && pnpm db:migrate",
    "db:studio": "prisma studio",
    "dev": "tsx --watch src/index.ts",
    "dev:api": "tsx --watch src/api/server.ts",
    "dev:down": "docker-compose -f docker-compose.dev.yml down",
    "dev:logs": "docker-compose -f docker-compose.dev.yml logs -f backend",
    "dev:restart": "docker-compose -f docker-compose.dev.yml restart backend",
    "dev:up": "docker-compose -f docker-compose.dev.yml up --build",
    "format": "prettier --check \"{src,test}/**/*.{js,ts,json}\"",
    "format:fix": "prettier --write \"{src,test}/**/*.{js,ts,json}\"",
    "health": "curl -f http://localhost:3000/api/v1/health || echo 'Backend not responding'",
    "lint": "eslint \"{src,test}/**/*.{js,ts,json}\"",
    "lint:fix": "pnpm lint --fix",
    "prisma:generate": "prisma generate",
    "setup": "pnpm install --frozen-lockfile && pnpm prisma:generate && pnpm db:migrate",
    "start": "node dist/src/index.js",
    "test": "vitest run --config vitest.config.ts --passWithNoTests",
    "test:cov": "vitest run --config vitest.config.ts --coverage",
    "test:integration": "vitest run test/integration/full-workflow.test.ts --config vitest.config.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.1.0",
    "@fastify/swagger": "^9.1.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@prisma/client": "^5.17.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "ioredis": "^5.4.1",
    "pino": "^9.3.2",
    "prom-client": "^14.2.0",
    "viem": "^2.9.20",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/amqplib": "0.10.7",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@vitest/coverage-v8": "2.0.5",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.2.1",
    "pino-pretty": "^11.2.2",
    "prettier": "3.3.3",
    "prisma": "^5.17.0",
    "tsx": "^4.15.7",
    "typescript": "5.5.4",
    "vitest": "2.0.5"
  },
  "engines": {
    "node": ">=22"
  }
}
